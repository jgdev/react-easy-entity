{
  "compilerOptions": {
    "sourceMap": true,
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "dist",
    "emitDeclarationOnly": true,
    "declaration": true,
    "jsx": "react",
    "esModuleInterop": true,
    "composite": true,
    "paths": {
      "@root": ["./src"],
      "@root/*": ["./src/*"],
      "@components": ["./src/components"],
      "@components/*": ["./src/components/*"],
      "@hooks": ["./src/hooks"],
      "@hooks/*": ["./src/hooks/*"],
      "@context": ["./src/context"],
      "@context/*": ["./src/context/*"],
    }
  },
  "include": ["./src/**/*.ts", "./src/**/*.tsx"]
}
